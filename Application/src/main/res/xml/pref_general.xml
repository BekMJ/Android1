<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A simple switch preference -->
    <SwitchPreferenceCompat
        android:key="pref_enable_something"
        android:title="Enable Something"
        android:summary="Turn this feature on or off"
        android:defaultValue="true" />

    <!-- An EditText preference -->
    <EditTextPreference
        android:key="pref_user_name"
        android:title="User Name"
        android:dialogTitle="Enter your name"
        android:defaultValue="Your Name" />

    <!-- Add more preferences here as needed -->
</PreferenceScreen>
