<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary colors for the app -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundLight</item> <!-- Setting background color -->
        <item name="android:textColor">@color/textPrimary</item> <!-- Default text color -->
    </style>

    <!-- Custom button style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/buttonColor</item> <!-- Use the button color defined -->
        <item name="android:textColor">@color/colorTitle</item> <!-- White text -->
        <item name="android:elevation">4dp</item> <!-- Adds shadow effect -->
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Custom TextView style for headers -->
    <style name="HeaderText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Custom TextView style for body text -->
    <style name="BodyText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
